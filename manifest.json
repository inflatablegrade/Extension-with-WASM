{
  "manifest_version": 3,
  "name": "WASM Sample",
  "version": "1.3",
  "description": "A basic Chrome extension using a simple WASM file.",
  "icons": { "128": "icon_128.png" },
  "background": {
    "service_worker": "main.js"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
	"web_accessible_resources": [{
	"resources": ["simple.wasm"],
	"matches": ["<all_urls>"]
	}],
  "action": {	
    "default_icon":  {
	"19": "icon_19.png"
	},
	"default_title": ""
  }
}
